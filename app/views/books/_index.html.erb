<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size: '100x100' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td class="favorite-btn">
          <%= render 'favorites/favorite_btn', book: book_show %>
        </td>
        <td>
          コメント件数：<%= book.post_comments.count %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>