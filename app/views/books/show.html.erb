<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book_show.user) do %>
            <%= image_tag @book_show.user.get_profile_image, size:"100x100" %><br>
            <%= @book_show.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book_show.title, @book_show %></td>
          <td><%= @book_show.body %></td>
          <td>
            <% if @book_show.favorited_by?(current_user) %>
            <small>
              <%= link_to book_favorites_path(@book_show), method: :delete do %>
                ♥<%= @book_show.favorites.count %>
              <% end %>
            </small>
            <% else %>
            <small>
              <%= link_to book_favorites_path(@book_show), method: :post do %>
                ♡<%= @book_show.favorites.count %>
              <% end %>
            </small>
            <% end %>
          </td>
          <td>
            コメント件数：<%= @book_show.post_comments.count %>
          </td>
          <% if @book_show.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book_show), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book_show, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
      <div>
        <% @book_show.post_comments.each do |post_comment| %>
          <small><%= image_tag post_comment.user.get_profile_image, size: "50x50" %></small>
          <small><%= post_comment.comment %></small>
          <small>
            <% if post_comment.user == current_user %>
              <%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete, class: "btn btn-sm btn-danger" %>
            <% end %>
          </small>
          <div>
            <%= link_to (post_comment.user) do %>
              <%= post_comment.user.name %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div>
        <%= form_with model: [@book_show, @post_comment] do |f| %>
        <%= f.text_area :comment, rows: '6', class: "d-block w-100" %>
        <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>